@{
    ViewData["Title"] = "Home Page";
}
<div>
    @using (Html.BeginForm("UploadVideo",
               "Home",
               FormMethod.Post,
               new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <text><h1>PogU</h1></text>
        <label for='file'>File:</label>
        <input id='file' name='FileData' type='file' accept=".mp4,.webm" value='Choose file' />
        <br />
        @*<text>Highlight hero</text>
        <select asp-items="@((List<SelectListItem>)Model["heroesEnumData"])">
          <option value="">Select hero</option>
        </select>*@
        <br />
        <text>Tags (comma separated)</text>
        <input name="Tags" type='text' />
        <br />
        <br />
        <input type='submit' value='Upload' />
    }
    <br />
    <br />
    @using (Html.BeginForm("Search",
               "Home",
               FormMethod.Get))
    {
        @Html.AntiForgeryToken()

        <text>Search</text>
        <input name="searchTerm" type='text' />
        <br />
        <br />
        <input type='submit' value='Search' />
    }
</div>