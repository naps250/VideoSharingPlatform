@{
    ViewData["Title"] = "Home Page";
}

<div>
    @using (Html.BeginForm("UploadVideo",
                    "Home",
                    FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
    { 
        <text><h1>PogU</h1></text>
        <label for='file'>File:</label>
        <input id='file' name='FileData' type='file' value='Choose file' />
        <br />
        <text>Tags</text>
        <input name="Tags" type='text' />
        <br />
        <br />
        <input type='submit' value='Upload' />
    }
</div>